{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% set region_id = 'madrone-' ~ region|clean_class ~ '-container' %}
{% set region_class = [
  'madrone-' ~ region|clean_class,
  'container',
] %}
{% set group_page = (groups and not page_node) %}
{% set col_width = group_page ? 6 : 9 %}
{% set background_image_style = image_uri ? 'background-image: url(' ~ image_uri ~ ');' : '' %}
{% if content %}
  <div id="osulp-title-block-container" class="{{ group_page ? 'group' : '' }} container-fluid bg-coastline-20 g-0 pb-4" style="{{background_image_style}}">
    <div{{attributes.setAttribute('id',region_id).addClass(region_class)}}>
      <div class="row">
        <div class="col-{{col_width}}">
          {{ content }}
        </div>
      </div>
    </div>
  </div>
{% endif %}
